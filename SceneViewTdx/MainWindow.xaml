<Window x:Class="SceneViewTdx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <esri:SceneView x:Name="MySceneView" Grid.Row="0">           
        </esri:SceneView >
        <StatusBar x:Name="statusBar" VerticalAlignment="Stretch" Grid.Row="1" >
            <TextBlock x:Name="fpsLabel"  FontSize="20" Foreground="Black" Width="120" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        </StatusBar>
    </Grid>
</Window>
